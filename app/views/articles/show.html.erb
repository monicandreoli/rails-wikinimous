<div class="container mt-5">
    <div class="card p-3">
        <div>
            <h4><%= @article.title %></h4>
            <p><%= @article.content %></p>
        </div>
        <div class="d-flex flex-row justify-content-center">
        <%= link_to "Go Back", articles_path, class: "btn btn-dark mx-1" %>
        <%= link_to 'edit article', edit_article_path, class: "btn btn-dark" %>
        <%= link_to 'destroy', article_path, method: :delete, data: {confirm: 'Are you sure you want to delete it?'}, class: "btn btn-dark mx-1" %>
        </div>
    </div>
</div>
